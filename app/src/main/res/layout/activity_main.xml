<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
        <com.sherwin.rapid.base.framework.widget.ElectricityViewOld
            android:id="@+id/electricity0"
            android:layout_width="22dp"
            android:layout_height="11dp"
            android:layout_marginTop="3dp"
            app:electric_bg_color="#fff"
            app:electric_main_color="#aaa"
            app:electric_power="0.5"/>
        <com.sherwin.rapid.base.framework.widget.ElectricityView
            android:id="@+id/electricity3"
            android:layout_width="22dp"
            android:layout_height="11dp"
            android:layout_marginTop="3dp"
            app:electric_main_color="#aaa"
            app:electric_border_width="1dp"
            app:electric_radius="2dp"
            app:electric_power="0.5"/>
        <com.sherwin.rapid.base.framework.widget.ElectricityViewOld
            android:id="@+id/electricity1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:electric_bg_color="#fff"
            app:electric_main_color="#aaa"
            app:electric_border_width="5dp"
            app:electric_radius="5dp"
            app:electric_power="0.5"/>
        <com.sherwin.rapid.base.framework.widget.ElectricityView
            android:id="@+id/electricity2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:electric_main_color="#aaa"
            app:electric_border_width="5dp"
            app:electric_radius="5dp"
            app:electric_power="0.5"/>

    </LinearLayout>
</layout>
